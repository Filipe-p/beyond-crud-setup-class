
<%= simple_form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <% @restaurant.errors.full_messages.each do |filipe_errors| %>
      <li><%= filipe_errors %></li>
    <% end %>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :stars %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
